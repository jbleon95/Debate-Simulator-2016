<CandName@Label>:
    font_size: 18
    color: 0, 0, 0, 1

<ProfPic@Image>:
    

<drawMenu>:    
    canvas:
        Color: 
            rgba: 255, 255, 255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        id: submit_button
        font_size: 18
        width: 125
        height: 50
        center_x: root.width * .5
        center_y: root.height * .15
        text: 'Submit!'
        size: self.width, self.height

    Image:
        source: 'profpics/trump.jpg'
        pos: (root.width * .5) - 125, (root.height * .5) + 180

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) + 180
        text: 'Trump'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) + 120
        text: 'Cruz'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) + 60
        text: 'Rubio'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5)
        text: 'Kasich'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) - 60
        text: 'Carson'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) - 120
        text: 'Bush'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) - 180
        text: 'Christie'

<drawChat>:
    BoxLayout:
        canvas:
            Color:
                rgba: 0, 1, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        rows: 7
        Button:
            text: '1'
        Button:
            text: '2'

    Label:
        color: 0, 0, 0, 1
        text: app.speaker
        pos: root.width /2, root.height /2