<CandName@Label>:
    font_size: 18
    color: 0, 0, 0, 1

<drawMenu>:    
    canvas:
        Color: 
            rgba: 255, 255, 255, 1
        Rectangle:
            pos: self.pos
            size: self.size


    Button:
        id: submit_button
        font_size: 18
        width: 125
        height: 50
        center_x: root.width * .5
        center_y: root.height * .15
        text: 'Submit!'
        size: self.width, self.height

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) + 180
        text: 'Trump'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) + 120
        text: 'Cruz'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) + 60
        text: 'Rubio'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5)
        text: 'Kasich'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) - 60
        text: 'Carson'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) - 120
        text: 'Bush'

    CandName:
        pos: (root.width * .5) - 125, (root.height * .5) - 180
        text: 'Christie'

<drawChat>:
    BoxLayout:
        size: self.size
        orientation: 'veritcal'
        rows: 10

